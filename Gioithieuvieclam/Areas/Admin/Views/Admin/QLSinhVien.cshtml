}

<div class="container mt-4">
    <h2>Danh sách Tài khoản Sinh viên</h2>
    <p>
        @Html.ActionLink("Thêm tài khoản", "Create")
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Password</th>
                <th>RoleID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sinhVien in danhSachSinhVien)
            {
                <tr>
                    <td>@sinhVien.Email</td>
                    <td>@sinhVien.Password</td>
                    <td>@sinhVien.RoleID</td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = sinhVien.UserID }) |

                        @Html.ActionLink("Xóa", "Delete", new { id = sinhVien.UserID }) |

                        @Html.ActionLink("Xem thông tin sinh viên", "Delete", new { id = sinhVien.UserID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



